create TABLE tweet(
    id varchar,
    title varchar,
    body varchar,
    author varchar,
    users_who_liked list<varchar>,
    users_who_disliked list<varchar>,
    date timestamp,
    temp_key int,
    PRIMARY KEY(temp_key, date)
);

create INDEX idx ON tweet (id);

create TABLE comment (
    id varchar,
    post_id varchar,
    body varchar,
    author varchar,
    date timestamp,
    PRIMARY KEY(post_id, date)
);